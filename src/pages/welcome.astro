---
import LoginButton from "@/app/components/login-button";
import RadixProvider from "@/app/components/radix-provider";
import RootLayout from "@/pages/_root-layout.astro";
import { Heading, Text } from "@radix-ui/themes";
import { CircleCheckBigIcon } from "lucide-react";
---

<RootLayout>
  <RadixProvider>
    <div
      class="from-accent-1 to-accent-5 flex h-screen items-center justify-center"
    >
      <main class="mx-auto grid w-full max-w-sm gap-6 px-4 pb-32">
        <div class="flex items-center justify-center">
          <CircleCheckBigIcon className="text-accent-10 size-16" />
        </div>
        <section class="prose dark:prose-invert w-full max-w-none text-center">
          <Heading size="8" mb="2"> Todos </Heading>
          <Text size="2" color="gray" className="text-pretty">
            A collaboratice real-time todo app
          </Text>
        </section>
        <div class="grid gap-2">
          <LoginButton provider="google" />
          <LoginButton provider="github" />
        </div>
      </main>
    </div>
  </RadixProvider>
</RootLayout>
